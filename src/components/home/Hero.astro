---
import { CONTACT, SITE } from "../../consts";
import Button from "../shared/Button.astro";
import Animate from "../shared/Animate.astro";
---

<section class="hero-container">
    <!-- Imagen del hero -->
    <picture class="hero-image">
        <source
            srcset="/images/home/chirikay-cultivando-salud-chirimoya-mobile.webp"
            media="(max-width: 480px)"
        />
        <source
            srcset="/images/home/chirikay-cultivando-salud-chirimoya-tablet.webp"
            media="(max-width: 768px)"
        />
        <img
            src="/images/home/chirikay-cultivando-salud-chirimoya.webp"
            alt="Productos ChiriKay"
            class="hero-image"
            loading="eager"
            fetchpriority="high"
        />
    </picture>

    <!-- Contenido del hero -->
    <div class="mx-auto my-auto relative w-full h-full flex items-center justify-center">
        <div class="text-content gap-4 relative z-50 bg-none mx-2 text-center">
            <Animate type="fadeInUp" delay={100} duration={2200} threshold={0.05}>
                <h1 class="font-primary text-white mt-0 text-4xl md:text-6xl lg:text-5xl xl:text-7xl leading-tight font-bold-custom">
                    Cultivamos Salud y Sabor
                    <br class="hidden md:block" />
                    <span class="text-rv-light text-4xl md:text-6xl lg:text-5xl xl:text-7xl">
                        desde Huarochirí - Lima
                    </span>
                </h1>
            </Animate>

            <Animate type="fadeInUp" delay={300} duration={2200} threshold={0.05}>
                <p class="font-secondary text-white mt-8 text-3xl lg:text-3xl xl:text-3xl hidden lg:block mx-auto max-w-4xl">
                    Chirimoya natural, orgánica y deliciosa,
                    <br class="hidden md:block" />
                    <span>de nuestras manos a tu mesa</span>
                </p>
            </Animate>

            <div class="hidden md:flex gap-8 justify-center items-center mt-8 md:mt-12 flex-col md:flex-row">
                <Animate type="fadeInLeft" delay={500} duration={2100} threshold={0.05}>
                    <Button
                        ariaLabel="Conocer el proceso"
                        text="Conocer el proceso"
                        icon="apoyo"
                        iconPosition="left"
                        style="rounded"
                        color="var(--rv-cta)"
                        textColor="var(--rv-very-dark)"
                        hoverColor="var(--rv-dark)"
                        hoverTextColor="var(--rv-very-light)"
                        shadowColor="var(--rv-dark)"
                        size="xl"
                        href="#proceso-cultivo"
                        target="_self"
                        rel="noopener noreferrer"
                        class="font-secondary font-semibold"
                    />
                </Animate>

                <Animate type="fadeInRight" delay={500} duration={2100} threshold={0.05}>
                    <Button
                        ariaLabel="Comprar ahora"
                        text="Comprar ahora"
                        href={`https://wa.me/${CONTACT.WHATSAPP}?text=Me%20interesa%20su%20producto%20${SITE.URL}`}
                        icon="whatsapp"
                        iconPosition="left"
                        style="rounded"
                        color="var(--rv-light)"
                        textColor="var(--rv-dark)"
                        hoverColor="var(--rv-dark)"
                        hoverTextColor="var(--rv-light)"
                        shadowColor="var(--rv-dark)"
                        size="xl"
                        class="px-[60px] font-secondary font-semibold"
                    />
                </Animate>
            </div>
        </div>
    </div>
</section>

<style>
    /* Estilos base del contenedor hero */
    .hero-container {
        height: 100vh;
        height: 100dvh;
        overflow: visible;
        position: relative;
        z-index: 1;
        isolation: isolate;
    }

    /* Contenedor para el efecto de borde interno */
    .hero-image {
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        /* Marco Polaroid */
        padding: 15px;
        background-color: var(--rv-very-light);
    }

    /* Imagen con bordes redondeados hacia adentro */
    .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        border-radius: 30px;
        clip-path: inset(0 round 30px);
    }

    /* Estilos del contenido de texto */
    .text-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        max-width: 1200px;
        width: 90%;
        position: absolute;
        top: 65%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 2rem;
        gap: 1rem;
    }

    .text-content h1.font-bold-custom {
        font-weight: 900;
        text-shadow:
            1px 4px 2px black,
            0 0 1em gray,
            0 0 0.1em gray;
        margin-top: 0;
        color: white;
    }

    .text-content p {
        font-weight: 600;
        text-shadow:
            4px 4px 2px var(--rv-dark),
            0 0 2em var(--rv-dark),
            0 0 0.3em var(--rv-dark);
        margin-top: 2rem;
    }

    /* Media queries responsive */
    @media (max-width: 1023px) {
        .text-content {
            width: 90%;
            padding: 1.5rem;
        }

        .text-content h1 {
            font-size: 4.5rem !important;
        }

        .text-content h1 span {
            font-size: 4.5rem !important;
        }
    }

    @media (max-width: 768px) {
        .hero-container {
            height: 100vh;
            height: 100dvh;
        }

        .hero-image {
            height: 100vh;
            height: 100dvh;
        }

        .text-content {
            width: 90%;
            padding: 1rem;
            top: 50%;
        }

        .text-content h1 {
            font-size: 3rem !important;
        }

        .text-content h1 span {
            font-size: 3rem !important;
        }

        .text-content p {
            font-size: 2rem !important;
            margin-top: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .hero-container,
        picture {
            margin: 0;
            padding: 0;
        }

        .hero-image {
            width: 100vw;
            height: 100vh;
            height: 100dvh;
        }

        .text-content {
            width: 90%;
            padding: 1rem;
            top: 50%;
        }

        .text-content h1 {
            font-size: 2.5rem !important;
        }

        .text-content h1 span {
            font-size: 2.5rem !important;
        }

        .text-content p {
            font-size: 1.5rem !important;
            margin-top: 1rem;
        }
    }

    @media (max-width: 768px) and (orientation: landscape) {
        .text-content {
            width: 90%;
            padding: 1rem;
        }

        .text-content h1 {
            font-size: 3.5rem !important;
        }

        .text-content h1 span {
            font-size: 3.5rem !important;
        }
    }
</style>