import Container from "../shared/Container.astro";

const datacardsagricultura = [
    {
        mainTitle: "Certificados Que Respaldan Nuestra Calidad",
        mainCard: {
            titleLines: ["AGRICULTURA", "FAMILIAR", "DEL PERÚ"],
            badgeText: "Certificación Oficial",
            description:
                "Somos parte de la Agricultura Familiar del Perú, una distinción otorgada por el Ministerio de Desarrollo Agrario y Riego que garantiza nuestro compromiso con la calidad y sostenibilidad.",
            details: [
                {
                    icon: "document",
                    text: "Licencia N°: 00570-2024-MCAF-MIDAGRI",
                },
                {
                    icon: "package",
                    text: "Productos certificados: Chirimoya y Palta",
                },
                { icon: "calendar", text: "Vigencia: Desde 2024" },
            ],
        },
        featureCards: [
            {
                title: "100% Orgánico",
                description: "Sin químicos ni pesticidas",
                icon: "check",
            },
            {
                title: "Comercio Justo",
                description: "Precios justos para agricultores",
                icon: "heart",
            },
            {
                title: "Sostenible",
                description: "Cuidamos el medio ambiente",
                icon: "refresh",
            },
            {
                title: "Calidad Premium",
                description: "Selección rigurosa de frutos",
                icon: "star",
            },
        ],
    },
];

// Extraemos los datos para facilitar el acceso
const { mainTitle, mainCard, featureCards } = datacardsagricultura[0];
