---
import Container from "../shared/Container.astro";
import Icon from "../shared/Icon.astro";
import Animate from "../shared/Animate.astro";

// Array de datos para las cards
const datacard = [
    {
        title: "Cultivo 100% Orgánico",
        description: "Sin químicos ni pesticidas, respetando la naturaleza y tu salud",
        mainIcon: "cultivo-organico",
    },
    {
        title: "Dulce, Cremosa y Saludable",
        description: "Sabor único y textura perfecta, rica en nutrientes esenciales",
        mainIcon: "dulce-cremosa-saludable",
    },
    {
        title: "Clima Ideal de Huarochirí",
        description: "Condiciones perfectas de altura y clima para el mejor sabor",
        mainIcon: "clima-ideal",
    },
    {
        title: "Agricultura Familiar",
        description: "Tradición y experiencia de generaciones de agricultores",
        mainIcon: "agricultura-en-familia",
    },
];
---

<section class="asi-cultivamos" id="asi-cultivamos">
    <Container className="py-12 lg:py-16">
        <!-- Header -->
        <Animate type="fadeInUp" delay={100} duration={800} threshold={0.05}>
            <div class="text-center mb-12">
                <h2 class="title">¿Por Qué Elegir Nuestra Chirimoya?</h2>
                <p class="paragraph font-secondary">
                    Cada chirimoya es un acto de amor cultivado en comunidad.
                </p>
            </div>
        </Animate>

        <!-- Benefits Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {datacard.map((card, index) => (
                <Animate 
                    type="fadeInUp" 
                    delay={100 + (index * 150)} 
                    duration={800}
                    threshold={0.05}
                >
                    <div class="benefit-card group relative bg-rv-light rounded-xl shadow-md p-6 transition-all duration-300 ease-in-out cursor-pointer h-[320px] hover:shadow-xl hover:-translate-y-2 hover:bg-green-50">
                        <div class="card-content text-center h-full flex flex-col items-center">
                            <div class="icon-container relative m-6 transform transition-transform duration-300 group-hover:scale-110 h-[120px] rounded-full flex items-center justify-center">
                                <Icon
                                    name={card.mainIcon}
                                    class:list={["card-icon"]}
                                    size={110}
                                    inheritColor={false}
                                />
                            </div>
                            <h3 class="card-title">{card.title}</h3>
                            <p class="card-paragraph font-secondary">
                                {card.description}
                            </p>
                        </div>
                    </div>
                </Animate>
            ))}
        </div>
    </Container>
</section>

<style>
    /* Keyframes for animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }

    /* Card styles */
    .benefit-card {
        position: relative;
        overflow: hidden;
        will-change: transform, box-shadow;
    }

    .benefit-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(to right, #4ade80, #22c55e);
        border-radius: 0.75rem;
        opacity: 0;
        transition: opacity 0.3s;
        z-index: -1;
    }

    .benefit-card:hover::before {
        opacity: 0.05;
    }

    /* Card content styles */
    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--rv-dark);
    }

    .card-paragraph {
        font-size: 1rem;
        color: var(--rv-dark);
        opacity: 0.9;
    }

    /* Pulse effect on hover */
    .benefit-card:hover .icon-container {
        animation: pulse 1.5s ease-in-out infinite;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .benefit-card {
            height: 280px;
        }
        
        .icon-container {
            height: 100px;
            margin: 1.5rem 0;
        }
    }
</style>