---
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.order.valueOf() - b.data.order.valueOf(),
);

import { SITE, CONTACT, SOCIAL } from "../consts";
import Icon from "./shared/Icon.astro";

const currentYear = new Date().getFullYear();

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  {
    platform: "Facebook",
    url: SOCIAL.FACEBOOK,
    icon: "facebook",
  },
  {
    platform: "Instagram", 
    url: SOCIAL.INSTAGRAM,
    icon: "instagram",
  },
  {
    platform: "TikTok",
    url: SOCIAL.TIKTOK,
    icon: "tiktok",
  },
];

const quickLinks = [
  { name: "Inicio", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Contacto", href: "/contactanos" },
];
---

<footer class="bg-rv-dark border-t border-gray-100 ">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
      
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <a 
          href="/" 
          class="inline-block mb-4 group"
          aria-label="Ir al inicio"
        >
          <img
            src="/images/logo/logo.webp"
            alt={SITE.TITLE}
            class="h-12 w-auto transition-opacity duration-200 group-hover:opacity-80"
            loading="lazy"
          />
        </a>
        <p class="text-rv-very-light   text-sm leading-relaxed max-w-md mb-6">
          {SITE.DESCRIPTION}
        </p>
        
        <!-- Social Links -->
        <div class="flex items-center space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-rv-cta hover:text-rv-very-light   transition-colors duration-200"
              aria-label={`Síguenos en ${social.platform}`}
            >
              <Icon name={social.icon} size={20} />
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold text-rv-cta  mb-4">
          Enlaces
        </h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-rv-very-light   hover:text-rv-cta  transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Latest Posts -->
      <div>
        <h3 class="text-sm font-semibold text-rv-cta  mb-4">
          Últimas Entradas
        </h3>
        <ul class="space-y-3">
          {posts.slice(0, 4).map((post) => (
            <li>
              <a
                href={`/blog/${post.id}`}
                class="text-sm text-rv-very-light   hover:text-rv-cta  transition-colors duration-200 line-clamp-2"
              >
                {post.data.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Contact Bar -->
    <div class="mt-12 pt-8 border-t border-gray-100  ">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        
        <!-- Contact Info -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-sm text-rv-very-light  ">
          <a
            href={`https://wa.me/${CONTACT.WHATSAPP}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-rv-cta  transition-colors duration-200"
          >
            <Icon name="whatsapp" size={16} />
            <span>{CONTACT.WHATSAPP}</span>
          </a>
          
          <span class="hidden sm:block text-gray-300  ">•</span>
          
          <a
            href={`https://maps.google.com/?q=${CONTACT.COORDINATES}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-rv-cta  transition-colors duration-200"
          >
            <Icon name="location" size={16} />
            <span>{CONTACT.ADDRESS}</span>
          </a>
        </div>

        <!-- Copyright -->
        <p class="text-sm text-white  ">
          © {currentYear}
          <a
            href="/"
            class="font-medium text-rv-cta   hover:text-rv-light  transition-colors duration-200 ml-1"
          >
            {SITE.AUTHOR}
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>