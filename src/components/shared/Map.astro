---
// components/EmbedMap.astro
import type { Props } from 'astro';

interface Props {
  mapEmbedUrl: string;
  title?: string;
  badgeText?: string;
  aspectRatio?: string | null;
  className?: string;
  allowFullScreen?: boolean;
  loading?: 'eager' | 'lazy';
  showBadge?: boolean;
  badgePosition?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
  borderRadius?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | 'full';
  shadow?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  ariaLabel?: string;
  height?: string;
}

const {
  mapEmbedUrl,
  title = "Ubicaci√≥n en mapa",
  badgeText = "üìç Nuestros Campos",
  aspectRatio = null, // Cambiado a null por defecto
  className = "",
  allowFullScreen = true,
  loading = "lazy",
  showBadge = true,
  badgePosition = "top-left",
  borderRadius = "2xl",
  shadow = "2xl",
  ariaLabel = "Mapa interactivo mostrando la ubicaci√≥n",
  height = "100%", // Nueva prop para controlar altura
} = Astro.props;

// Validar URL del mapa
if (!mapEmbedUrl) {
  throw new Error("La propiedad 'mapEmbedUrl' es requerida");
}

// Clases din√°micas
const badgePositionClasses = {
  'top-left': 'top-4 left-4',
  'top-right': 'top-4 right-4',
  'bottom-left': 'bottom-4 left-4',
  'bottom-right': 'bottom-4 right-4',
};

const borderRadiusClasses = {
  'none': 'rounded-none',
  'sm': 'rounded-sm',
  'md': 'rounded-md',
  'lg': 'rounded-lg',
  'xl': 'rounded-xl',
  '2xl': 'rounded-2xl',
  '3xl': 'rounded-3xl',
  'full': 'rounded-full',
};

const shadowClasses = {
  'none': 'shadow-none',
  'sm': 'shadow-sm',
  'md': 'shadow-md',
  'lg': 'shadow-lg',
  'xl': 'shadow-xl',
  '2xl': 'shadow-2xl',
};

// Estilo condicional para el contenedor
const containerClass = `
  relative 
  ${className} 
  ${aspectRatio ? `aspect-[${aspectRatio}]` : 'h-full'}
`;
---

<div class={containerClass.trim()}>
  <div 
    class={`
      w-full 
      ${height !== '100%' ? `h-[${height}]` : 'h-full'}
      ${borderRadiusClasses[borderRadius]} 
      overflow-hidden 
      ${shadowClasses[shadow]} 
      bg-gray-200
    `}
  >
    <iframe
      src={mapEmbedUrl}
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen={allowFullScreen}
      loading={loading}
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full h-full min-h-[300px]"
      title={title}
      name="mapa-ubicacion"
      aria-label={ariaLabel}
      fetchpriority={loading === 'eager' ? 'high' : 'low'}
    ></iframe>
  </div>
  
  {showBadge && (
    <div class={`absolute ${badgePositionClasses[badgePosition]} bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full ${shadowClasses['md']}`}>
      <p class="text-sm font-semibold text-rv-dark">{badgeText}</p>
    </div>
  )}
</div>