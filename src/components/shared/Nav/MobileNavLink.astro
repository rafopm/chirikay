---
const { href, currentPath, children } = Astro.props;
const isActive = currentPath === href;
---

<a
  href={href}
  class={`block px-8 py-4 text-rv-dark text-xl font-medium rounded-xl transition-all duration-300 min-w-[200px] text-center relative overflow-hidden ${
    isActive ? 'active' : ''
  }`}
>
  <span class="relative z-10 transition-all duration-300 group-hover:translate-x-1 group-hover:text-rv-accent">
    <slot />
  </span>
</a>

<style>
  .active::after {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--rv-accent);
    border-radius: 2px;
    z-index: 2;
  }
  .active span {
    color: var(--rv-accent);
    font-weight: 600;
  }
</style>