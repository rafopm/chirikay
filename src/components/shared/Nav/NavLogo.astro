---
const logoSize = {
  default: 'w-[180px] lg:w-[180px] xl:w-[300px]',
  scrolled: 'w-[110px] sm:w-[160px]'
};
---

<a href="/" class="block w-auto h-auto relative focus:outline-none hover:scale-105 transition-transform duration-200">
  <picture>

    <source
      srcset="/images/logo/logo-mobile.webp"
      media="(max-width: 1023px)"
    />

    <img
      src="/images/logo/logo.webp"
      alt="ChiriKay"
      class={`logo-image ${logoSize.default} transition-all duration-500 relative z-10`}
      height="auto"
      fetchpriority="high"
    />
  </picture>
</a>

<style is:global>
  nav.scrolled .logo-image,
  nav.not-home .logo-image {
    width: 110px !important;
  }
  @media (min-width: 640px) {
    nav.scrolled .logo-image,
    nav.not-home .logo-image {
      width: 160px !important;
    }
  }
</style>