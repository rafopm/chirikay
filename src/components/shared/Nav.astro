---
const isHome = Astro.url.pathname === "/";
const navClass = isHome ? "" : "not-home";
const { pathname } = Astro.url;
---

<nav
  id="main-nav"
  class={`fixed w-full h-24 min-h-[100px] py-3 z-50 transition-all duration-300 ${navClass}`}
>
  {/* Fondo del nav */}
  <div
    class="nav-background absolute inset-0 bg-transparent backdrop-blur-none opacity-0 transition-all duration-400 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] -z-10"
  >
  </div>

  <div class="mx-auto max-w-7xl relative w-full px-4">
    <div
      id="nav-inner"
      class="flex items-center justify-between px-0 md:px-4 py-2 transition-all duration-400 ease-in-out relative"
    >
      <div class="flex items-center justify-between w-full">
        {/* Menú izquierdo desktop */}
        <div
          class="hidden lg:flex items-center h-16 min-w-[200px] bg-[var(--rv-dark)] rounded-2xl px-4 transition-all duration-400 ease-[cubic-bezier(0.25,0.46,0.45,0.94)]"
        >
          <a
            href="/blog"
            class={`nav-link w-full h-full flex items-center justify-center rounded-xl relative overflow-hidden ${pathname === "/blog" ? "active" : ""}`}
          >
            <span
              class="nav-text font-secondary text-white relative z-10 transition-all duration-300"
              >Blog</span
            >
          </a>
        </div>

        <div
          class="flex-1 flex justify-start lg:justify-center transition-all duration-400 ease-[cubic-bezier(0.25,0.46,0.45,0.94)]"
        >
          <a
            href="/"
            class="block w-auto h-auto relative focus:outline-none hover:scale-105 transition-transform duration-200"
          >
            <picture>
              <source
                srcset="/images/logo/logo-mobile.webp"
                media="(max-width: 1023px)"
                type="image/webp"
              />
              <source srcset="/images/logo/logo.webp" type="image/webp" />
              <img
                src="/images/logo/logo.webp"
                alt="logo ChiriKay"
                class="logo-image w-[180px] lg:w-[180px] xl:w-[300px] transition-all duration-500 relative z-10"
                height="auto"
                fetchpriority="high"
                decoding="async"
              />
            </picture>
          </a>
        </div>

        <div
          class="hidden lg:flex items-center h-16 min-w-[200px] bg-[var(--rv-dark)] rounded-2xl px-4 transition-all duration-400 ease-[cubic-bezier(0.25,0.46,0.45,0.94)]"
        >
          <a
            href="/contactanos"
            class={`nav-link w-full h-full flex items-center justify-center rounded-xl relative overflow-hidden ${pathname === "/contactanos" ? "active" : ""}`}
          >
            <span
              class="nav-text font-secondary text-white relative z-10 transition-all duration-300"
              >Contáctanos</span
            >
          </a>
        </div>

        {/* Botón hamburguesa mobile */}
        <button
          id="toggle-menu"
          type="button"
          class="lg:hidden absolute right-4 w-[50px] h-[50px] md:w-[60px] md:h-[60px] text-sm text-rv-dark flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-105 bg-transparent border border-white/20 z-50"
          aria-controls="navbar-cta"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <div class="hamburger-icon flex flex-col gap-1 w-6 h-[18px]">
            <span
              class="hamburger-line w-full h-[3px] bg-current rounded-[2px] transition-all duration-300"
            ></span>
            <span
              class="hamburger-line w-full h-[3px] bg-current rounded-[2px] transition-all duration-300"
            ></span>
            <span
              class="hamburger-line w-full h-[3px] bg-current rounded-[2px] transition-all duration-300"
            ></span>
          </div>
        </button>
      </div>
    </div>
  </div>

  {/* Menú móvil */}
  <div
    id="navbar-cta"
    class="mobile-menu hidden fixed inset-0 w-full h-screen z-40 transition-all duration-500 ease-out lg:hidden opacity-0 invisible pointer-events-none -translate-y-2.5 backdrop-blur-lg"
  >
    <div
      class="mobile-menu-overlay absolute inset-0 bg-[rgba(var(--rv-light-rgb),0.97)]"
    >
    </div>
    <div
      class="mobile-menu-content relative h-full flex items-center justify-center"
    >
      <ul class="mobile-nav-list flex flex-col items-center gap-8 p-8">
        <li
          class="mobile-nav-item opacity-0 translate-y-[30px] animate-[slideInUp_0.6s_ease-out_forwards]"
        >
          <a
            href="/blog"
            class={`mobile-nav-link block px-8 py-4 text-rv-dark text-xl font-medium rounded-xl transition-all duration-300 min-w-[200px] text-center relative overflow-hidden ${pathname === "/blog" ? "active" : ""}`}
          >
            <span
              class="mobile-nav-text relative z-10 transition-all duration-300"
              >Blog</span
            >
          </a>
        </li>
        <li
          class="mobile-nav-item opacity-0 translate-y-[30px] animate-[slideInUp_0.6s_ease-out_forwards] animation-delay-100"
        >
          <a
            href="/contactanos"
            class={`mobile-nav-link block px-8 py-4 text-rv-dark text-xl font-medium rounded-xl transition-all duration-300 min-w-[200px] text-center relative overflow-hidden ${pathname === "/contactanos" ? "active" : ""}`}
          >
            <span
              class="mobile-nav-text relative z-10 transition-all duration-300"
              >Contáctanos</span
            >
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script is:inline>
  document.addEventListener("astro:page-load", () => {
    const toggleButton = document.getElementById("toggle-menu");
    const navbar = document.getElementById("navbar-cta");
    const mainNav = document.getElementById("main-nav");
    const navInner = document.getElementById("nav-inner");
    const logoImage = document.querySelector(".logo-image");
    const menuItems = document.querySelectorAll(
      "[class*='bg-[var(--rv-dark)]']"
    );
    const hamburger = document.querySelector("#toggle-menu");

    // Scroll effects
    let ticking = false;
    window.addEventListener("scroll", () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const scrollY = window.scrollY;
          const add = scrollY > 50;
          mainNav?.classList.toggle("scrolled", add);
          navInner?.classList.toggle("scrolled", add);
          logoImage?.classList.toggle("scrolled", add);
          menuItems.forEach((el) => el.classList.toggle("scrolled", add));
          hamburger?.classList.toggle("scrolled", add);
          ticking = false;
        });
        ticking = true;
      }
    });

    function toggleMenu() {
      const isExpanded = toggleButton.getAttribute("aria-expanded") === "true";
      toggleButton.setAttribute("aria-expanded", !isExpanded);

      navbar.classList.toggle("hidden");

      if (navbar.classList.contains("hidden")) {
        navbar.classList.remove("showing");
        document.body.style.overflow = "";
        toggleButton.classList.remove("active"); // Cambiado aquí
      } else {
        navbar.classList.add("showing");
        document.body.style.overflow = "hidden";
        toggleButton.classList.add("active"); // Cambiado aquí
      }
    }

    toggleButton.addEventListener("click", toggleMenu);

    // Cerrar menú al hacer clic fuera
    document.addEventListener("click", (e) => {
      if (!navbar.contains(e.target) && !toggleButton.contains(e.target)) {
        if (!navbar.classList.contains("hidden")) {
          toggleMenu();
        }
      }
    });

    // Close mobile menu on resize
    window.addEventListener("resize", () => {
      if (window.innerWidth >= 1024 && !navbar?.classList.contains("hidden")) {
        toggleMenu();
      }
    });

    // Cerrar menú móvil al hacer clic en un enlace
    const mobileLinks = document.querySelectorAll(".mobile-nav-link");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (!navbar.classList.contains("hidden")) {
          toggleMenu();
        }
      });
    });
  });
</script>

<style is:global>
  /* Efectos cuando se hace scroll */
  nav.scrolled .nav-background,
  nav.not-home .nav-background {
    background: var(--rv-dark);
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 32px rgba(var(--rv-dark-rgb), 0.1);
    opacity: 1;
  }

  nav.scrolled,
  nav.not-home {
    padding: 0.5rem 0;
    height: 80px;
    min-height: 80px;
  }

  /* Desktop Navigation Links */
  .nav-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s ease;
    z-index: 1;
  }

  .nav-link:hover::before {
    left: 100%;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 30px;
    background: var(--rv-accent);
    border-radius: 2px;
    z-index: 3;
  }

  .nav-link:hover .nav-text {
    transform: translateX(2px);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }

  /* Mobile Navigation Links */
  .mobile-nav-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--rv-accent), var(--rv-dark));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .mobile-nav-link:hover::before,
  .mobile-nav-link.active::before {
    opacity: 0.1;
  }

  .mobile-nav-link.active::after {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--rv-accent);
    border-radius: 2px;
    z-index: 2;
  }

  .mobile-nav-link:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(var(--rv-dark-rgb), 0.15);
  }

  .mobile-nav-link:hover .mobile-nav-text {
    color: var(--rv-accent);
    transform: translateX(4px);
  }

  .mobile-nav-link.active .mobile-nav-text {
    color: var(--rv-accent);
    font-weight: 600;
  }

  /* Hamburger Button */
  /* Hamburger Button */
  #toggle-menu.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  #toggle-menu.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  #toggle-menu.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile Menu */
  .mobile-menu.showing {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: translateY(0);
    animation: fadeIn 0.5s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      backdrop-filter: blur(0);
    }
    to {
      opacity: 1;
      backdrop-filter: blur(20px);
    }
  }

  /* Logo se reduce cuando hace scroll */
  nav.scrolled .logo-image,
  nav.not-home .logo-image,
  .logo-image.scrolled {
    width: 110px !important;
  }

  @media (min-width: 640px) {
    nav.scrolled .logo-image,
    nav.not-home .logo-image,
    .logo-image.scrolled {
      width: 160px !important;
    }
  }

  @media (max-width: 1023px) {
    nav,
    nav.scrolled {
      padding: 0.75rem 0;
      height: 80px;
    }
    .logo-image {
      width: 160px !important;
    }
  }
</style>
